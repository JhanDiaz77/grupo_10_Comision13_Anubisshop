<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/headb')  %> 

<body>
    
    <%- include('../partials/header') %> 

    <section class="register">
        <h3>Crear cuenta</h3>
        <form action="/usuarios/register" method="POST" class="register" enctype="multipart/form-data">

            <div class="input-avatarcontainer">
                <label for="avatar" class="avatar__image"><h4> <i class="fa-solid fa-user"></i></h4></label>
                <input type="file" name="avatar" class="form__image" placeholder="Seleccione un archivo" id="image">
            </div>

            <div class="input-container">
                <label for="name"><h2>Nombre y Apellido</h2></label>
                <input type="text" name="name" class="input-style" placeholder="Ej: Juan" id="name" >
                <% if (locals.errors && errors.name) { %>
                    <small class="text-danger"><%= errors.name.msg %></small>
                <% } %>
            </div>


            <div class="input-container">
                <label for="email"><h2>E-mail</h2></label>
                <input type="email" name="email" class="input-style" placeholder="Ingrese su E-mail" id="email">
                <% if (locals.errors && errors.email) { %>
                    <small class="text-danger"><%= errors.email.msg %></small>
                <% } %>
            </div>


            <div class="input-container">
                <label for="phone"><h2>Teléfono (Opcional)</h2></label>
                <input type="tel" name="phone" class="input-style" placeholder="Ingrese su numero de Teléfono" id="phone" >
                <% if (locals.errors && errors.phone) { %>
                    <small class="text-danger"><%= errors.phone.msg %></small>
                <% } %>
            </div>

            <div class="input-container">
                <label for="password"><h2>Contraseña</h2></label>
                <input type="password" name="password" class="input-style" placeholder="Ingrese su contraseña" id="password">
                <% if (locals.errors && errors.password) { %>
                     <small class="text-danger"><%= errors.password.msg %></small>
                <% } %>
            </div>

            <div class="input-container">
                <label for="password2"><h2>Re-ingrese su Contraseña</h2></label>
                <input type="password" name="password2" class="input-style" placeholder="Re-ingrese su contraseña" id="password2">
                <% if (locals.errors && errors.password2) { %>
                    <small class="text-danger"><%= errors.password2.msg %></small>
                <% } %>
            </div>


            <div class="input_check-container">
                <label for="terms">Acepto los <a href="">Terminos y condiciones</a></label>
                <input type="checkbox" name="terms" id="terms"><br>
                <% if (locals.errors && errors.terms) { %>
                    <small class="text-danger"><%= errors.terms.msg %></small>
                <% } %>
            </div>
            <div class="btn-container-box">
                <button class="btn-register" type="reset">Limpiar</button>
                <button class="btn-register" type="submit">Registrarme</button>
            </div> 
            
        </form>
    </section>

    <%- include('../partials/footer')  %>   
    <%- include('../partials/scripts')  %>
</body>
</html>