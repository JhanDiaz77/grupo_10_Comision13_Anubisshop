<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/headb')  %> 

<body>
    <%- include('../partials/header') %>  

    <section class="addProductSection">
        <h3>Agregar Producto</h3>

        <form action="/admin/add" method="POST"  class="form_editProduct" enctype="multipart/form-data">
            <div class="input-container">
                <label for="name"><h2>Nombre del producto</h2></label>
                <input type="text" name="name" class="input-style" placeholder="Nombre del producto" id="name">
                <% if (locals.errors && errors.name) { %>
                    <small class="text-danger"><%= errors.name.msg%></small>
                  <% } %>
            </div>
            
            <!-- <div class="input-container">
                <label for="categoria"><h2>Categoría</h2></label>
                <select name="categoryId" id="categoria" class="category">
                    <option value="1">Juguetes</option>
                    <option value="2">Accesorios</option>
                    <option value="3">Almohadones, camas</option>
                    <option value="4">Alimentos</option>
                    <option value="5">Higiene</option>
                </select>
            </div> -->
            <div class="input-container">
                <label for="image"><h2>Imagen</h2></label>
                <input type="file" name="image" class="form_image" placeholder="Seleccione un archivo" id="image" name="image">
            </div>
            <div class="input-container">
                <label for="precio"><h2>Precio</h2></label>
                <input type="number" name="price" class="input-style" value="300" id="precio">
                <% if (locals.errors && errors.price) { %>
                    <small class="text-danger"><%= errors.price.msg%></small>
                  <% } %>
            </div>
            <div class="input-container">
                <label for="discount"><h2>Descuento</h2></label>
                <input type="number" name="discount" class="input-style" value="50" id="discount">
            </div>
            <!-- <div class="input-container">
                <label for="promo"><h2>Promo</h2></label>
                <select name="promo" id="promo" class="category">
                    <option value="Ninguno">Ninguno</option>
                    <option value="Oferta">Oferta</option>
                    <option value="Destacado">Destacado</option>
                </select>
            </div> -->
            <div class="input-container">
                <label for="description"><h2>Descripción</h2></label>
                <textarea name="description" class="input-style" id="description" cols="30" rows="10" style="height: 60px;"></textarea>
                <% if (locals.errors && errors.description) { %>
                    <small class="text-danger"><%= errors.description.msg%></small>
                  <% } %>
            </div>
            <div class="btn-addForm">
                <button class="addSubmit" type="submit">Crear</button>
            </div> 
            

        </form>
    </section>

    <%- include('../partials/footer')  %> 
    <%- include('../partials/scripts')  %>
    
</body>
</html>